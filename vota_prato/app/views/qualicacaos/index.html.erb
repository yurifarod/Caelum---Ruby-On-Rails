<p id="notice"><%= notice %></p>

<h1>Qualificações</h1>

<table>
  <thead>
    <tr>
      <th>Cliente</th>
      <th>Restaurante</th>
      <th>Nota</th>
      <th>Valor gasto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @qualicacaos.each do |qualicacao| %>
      <tr>
        <td><%= Cliente.find(qualicacao.cliente_id).nome %></td>
        <td><%= Restaurante.find(qualicacao.restaurante_id).nome %></td>
        <td><%= qualicacao.nota %></td>
        <td><%= qualicacao.valor_gasto %></td>
        <td><%= link_to 'Show', qualicacao %></td>
        <td><%= link_to 'Destroy', qualicacao, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Qualificação', new_qualicacao_path %>
